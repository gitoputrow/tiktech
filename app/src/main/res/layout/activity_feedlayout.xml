<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".feedlayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_curved"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/feed_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_imgsp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/feed_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/feed_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/feed_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/feed_name"
            app:layout_constraintStart_toEndOf="@+id/feed_name"
            app:layout_constraintTop_toTopOf="@+id/feed_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/feed_caption"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="lorem ipsum wkdnsjidibdegudwoiddoidio"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/feed_photo"
            app:layout_constraintTop_toBottomOf="@+id/feed_name" />

        <TextView
            android:id="@+id/readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="read more"
            android:background="@drawable/ripple"
            android:textColor="#6C63FF"
            app:layout_constraintBottom_toBottomOf="@+id/feed_photo"
            app:layout_constraintEnd_toEndOf="@+id/feed_caption"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/feed_caption"
            app:layout_constraintTop_toBottomOf="@+id/feed_caption"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/delete_feed"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/readmore"
            app:layout_constraintEnd_toEndOf="@+id/feed_caption"
            app:layout_constraintHorizontal_bias="0.977"
            app:layout_constraintStart_toEndOf="@+id/readmore"
            app:layout_constraintTop_toBottomOf="@+id/feed_caption"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/tempat_sampah" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


